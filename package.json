{
	"name": "next-storyblok-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "eslint --fix 'src/**/*.{ts,tsx,js}'"
	},
	"dependencies": {
		"@sendgrid/mail": "^7.4.0",
		"axios": "^0.20.0",
		"bulma": "^0.9.1",
		"classnames": "^2.2.6",
		"next": "10.0.3",
		"node-sass": "^5.0.0",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"react-use": "^15.3.4",
		"storyblok-js-client": "^3.2.0",
		"storyblok-react": "^0.1.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@types/node": "^14.14.10",
		"@types/react": "^17.0.0",
		"eslint": "^7.15.0",
		"eslint-config-prettier": "^7.0.0",
		"eslint-config-react-app": "^6.0.0",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.3.4",
		"lint-staged": "^10.5.3",
		"prettier": "^2.2.1",
		"typescript": "^4.1.2"
	},
	"prettier": {
		"useTabs": true,
		"endOfLine": "lf"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"prettier"
		],
		"rules": {
			"jsx-a11y/anchor-is-valid": "off",
			"no-restricted-imports": [
				"error",
				{
					"patterns": [
						"../*"
					]
				}
			]
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{ts,tsx,js,css,scss,md}": "prettier --write",
		"*.{ts,tsx,js}": "eslint --fix"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
